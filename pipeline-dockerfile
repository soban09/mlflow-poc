FROM python:3.12-slim

WORKDIR /app

RUN mkdir -p /app/logs

RUN apt-get update && apt-get install -y \
    build-essential \
    python3-dev \
    libffi-dev \
    libssl-dev \
    cargo \
    g++ \
    gfortran \
    libopenblas-dev

RUN pip install mlflow pymysql scikit-learn pandas

COPY ./_code.py /app
COPY ./diabetes-dev.csv /app